.movie-content
  min-height: 420px
  .ad
    width: 100%
    height: 20px
    margin-bottom: 20px
    background-color: red
  h1
    .year
      color: #999
      margin-left: 10px
  .main
    h2
      font: 15px Arial, Helvetica, sans-serif
      margin: 0 0 12px 0
      line-height: 1.5
      color: #007722
    .p1
      font: 12px Arial, Helvetica, sans-serif
      line-height: 1.5
      color: #666
    .movie-desc
      float: left
      width: 630px
      padding-right: 40px
      height: 700px
    .aside
      float: left
      width: 310px
      .ticket
        padding: 20px 0
        margin-bottom: 40px
        background: #f0f3f5
        text-align: center
        font-size: 13px
        .ticket-btn
          width: 160px
          display: inline-block
          line-height: 30px
          background: #268dcb
          color: #fff
      .qrcode-app
        margin: 20px 0
        .download
          display: block
          width: 310px
          height: 80px
          background: url("../../../dist/img/movie/movie_qrcode_app.png") no-repeat
          background-size: 310px 80px
      .gray-ad
        background: #f4f4ec
        padding: 10px
        margin-bottom: 20px
        word-wrap: break-word
        a:hover
          background-color: #37a
      .tags
        margin-bottom: 30px
        .tags-body
          line-height: 24px
          a
            display: inline-block
            margin: 0 8px 8px 0
            padding: 0 8px
            background-color: #f5f5f5
            &:hover
              color: #23527c
              background-color: #e8e8e8
      .doulist
        margin-bottom: 40px
        h2 > a
          font-size: 12px
          &:hover
            background-color: #37a
        ul
          border-top: 1px dashed #ddd
        li
          display: block
          padding: 4.5px 0
          border-bottom: 1px dashed #ddd
      .other
        margin-bottom: 40px
      .feed
        span
          display: block
        .feed-img
          background: url("../../../dist/img/movie/movie_feed.png") no-repeat
          padding: 0 0 30px 20px
