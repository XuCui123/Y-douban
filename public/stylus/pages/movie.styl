.db-nav-movie
  width: 100%
  min-width: 950px
  overflow: hidden
  margin-bottom: 40px
  background-color: #f0f3f5
  .nav-wrapper
    border-bottom: 1px solid #e5ebe4
    .nav-primary
      position: relative
      width: 950px
      margin: 0 auto
      padding: 10px 0 5px
      overflow: visible
      .nav-logo
        float: left
        width: 145px
        height: 56px
        margin: 0 13px 0 0
        font-size: 0
        background: url('../../../img/movie/movie_logo.png') no-repeat 0 12px
      .nav-search
        position: relative
        padding: 10px 0 15px
        overflow: hidden
        legend
          display: none
        label
          display: none
        .inp
          float: left
          width: 470px
          height: 34px
          text-align: center
          cursor: text
          background: url('../../../img/movie/movie_nav_bg.png') no-repeat 0 0
          input
            background-color: #fff
            width: 96%
            margin: 0
            text-align: left
            height: 30px
            padding-left: 10px
            border: none
        .btn
          position: relative
          left: -1px
          width: 37px
          height: 34px
          overflow: hidden
          button
            width: 100%
            height: 100%
            font-size: 0
            padding: 35px 0 0
            overflow: hidden
            color: transparent
            cursor: pointer
            background: url('../../../img/movie/movie_nav_bg.png') no-repeat 0 -40px
            border: none
  .nav-secondary
    width: 950px
    margin: 0 auto
    padding-bottom: 0
    overflow: hidden
    .nav-items
      font-size: 13px
      margin: 9px 0
      li
        display: inline
        margin-right: 30px
      a
        color: #27a
      a:hover
        color: #fff
        background-color: #37a
