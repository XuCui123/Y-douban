@import "components/account/header.styl"
@import "components/account/footer.styl"

.register-wrapper
  margin-bottom: 40px
  .register-form
    float: left
    width: 590px
    margin-right: 50px
    padding-bottom: 1em
    form
      position: relative
      left: 0
      top: 0
      .item
        clear: both
        margin: 15px 0
        label
          display: inline-block
          float: left
          width: 60px
          margin-right: 15px
          text-align: right
          font-size: 14px
          line-height: 30px
          vertical-align: middle
        .basic-input
          width: 200px
          height: 18px
          padding: 5px
          font-size: 14px
          border-radius: 3px
          border: 1px solid #c9c9c9
          box-sizing: content-box
        .loc
          font-size: 12px
          line-height: 30px
          em
            font-style: normal
            color: #808080
            strong
              font-weight: normal
              color: #111111
          a
            &:hover
              background-color: #039
        .phone-input
          position: relative
          display: table
          width: 210px
          height: 28px
          padding: 0
          font-size: 0
          border-radius: 3px
          border: 1px solid #c9c9c9
          span
            text-align: center
            padding: 0 7px
            cursor: pointer
            color: #494949
            white-space: nowrap
            line-height: 28px
          .district-choose-hook::after
            content: ''
            display: inline-block
            height: 15px
            border-right: 1px solid #ccc
            vertical-align: middle
            margin-left: 7px
          span,div,input
            font-size: 14px
            display: table-cell
            vertical-align: top
          input[type="text"]
            padding: 0 7px 0 0
            border: none
            height: 100%
            width: 100%
            box-sizing: border-box
          input
            line-height: 28px
          .phone-error
            display: none
            position: absolute
            left: 100%
            top: 0
            margin-left: 10px
            font-size: 12px
            color: #fe2617
        .agreement
          margin-left: 75px
          .agreement-label
            display: inline
            width: auto
            text-align: left
            float: none
            cursor: pointer
            color: #000
            font-size: 12px
            a:hover
              background-color: #039
        .register-submit-btn
          font-size: 14px
          padding: 6px 26px
          font-weight: bold
          border-radius: 3px
          cursor: pointer
        .disabled
          color: #999
          background: #f0f0f0
          border: 1px solid #ccc
        .enabled
          color: #fff
          background: #3fa156
          border: 1px solid #528641
      .item-error
        height: 29px
        margin-left: 75px
        color: #fe2617
      .item-submit
        margin: 0
      .catcha-item
        font-size: 0
        position: relative
        .basic-input
          width: 95px
          height: 19px
        .phone-code-btn
          cursor: pointer
          background: #fff
          border: 1px solid #c9c9c9
          font-size: 13px
          padding: 4px 15px
          border-radius: 3px
          vertical-align: middle
        .phone-code-right,.phone-code-error
          display: none
          position: absolute
          left: 300px
          line-height: 31px
          font-size: 12px
          color: red
          .code
            color: #30a080
      .suggestion
        padding-left: 75px
        .tips
          color: #808080
          font-size: 12px
      .extra-tips
        .validate-option,.validate-error
          display: none
          padding-left: 10px
          background: url('../../../img/tips_arrow.gif') no-repeat
        .validate-option
          background-position: left 3px
          color: #808080
        .validate-error
          background-position: left -52px
          color: #fe2617
  .register-aside
    float: right
    width: 310px
    color: #666
    li
      display: block
      padding-bottom: 1em
      a:hover
        background-color: #039
.dui-dialog-mask
  position: absolute
  width: 100%
  z-index: 999
  top: 0
  left: 0
  opacity: 0.7
  background-color: #fff
.dui-dialog
  display: none
  z-index: 1000
  position: fixed
  visibility: visible
  .dui-dialog-shd
    position: absolute
    left: -8px
    top: -8px
    width: 100%
    height: 100%
    padding: 8px
    background-color: #666
    opacity: 0.4
    border-radius: 5px
    box-sizing: content-box
  .dui-dialog-content
    position: relative
    z-index: 2
    background-color: #fff
    border: 1px solid #bbb
    border-radius: 4px
    .dui-dialog-close
      position: absolute
      top: 10px
      right: 12px
      padding: 0 3px
      z-index: 1
      color: #b4b4b4
      font: 11px/1.2 "Comic Sans MS", sans-serif
      &:hover
        color: #fab0b6
    .hd
      padding: 10px 10px 6px
      background-color: #ebf5eb
      font-size: 14px
      border-radius: 4px 4px 0 0
      h3
        padding: 0 40px 0 4px
        background-color: none
        color: #060
        font-weight: normal
        font-size: 100%
    .bd
      position: relative
      padding: 15px
      font-size: 12px
      max-height: 24em
      overflow: auto !important
      &::after
        content: '\0020'
        clear: both
        display: block
      .phone-list
        li:first-child
          border-top: 1px solid #e5e5e5
        li
          display: block
          overflow: hidden
          line-height: 2.6
          color: #494949
          cursor: pointer
          border-bottom: 1px solid #e5e5e5
          text-align: justify
          font-size: 0
          &::after
            content: ''
            width: 100%
            display: inline-block
          &>*
            display: inline-block
            font-size: 14px
          .item-district
            font-weight: bold
            span
              position: relative
              font-size: 1.5em
              line-height: 1
              vertical-align: middle
              display: inline-block
            .flag
              text-indent: -999em
              padding: 0 !important
              margin: -2px 10px 0 0
              width: 16px
              height: 11px
