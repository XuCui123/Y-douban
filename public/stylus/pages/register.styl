          .item-number
            color: #aaa
        .is-active
          color: #42bd56
          .item-district::after
            content: '✔️'
            margin-left: 10px
          .item-number
            color: #42bd56
      #location_tabs
        li
          padding: 0 12px
          a:hover
            background-color: #039
        .selected
          background-color: #93b77b
          border-radius: 3px
          a
            color: #fff
            cursor: default
            &:hover
              background: none
      .panel
        border: none
        ul
          border-top: 1px solid #ccc
          padding: 12px 0 0 12px
          margin: 10px 0
          li
            padding: 0 3px
            margin-right: 15px
          a
            font-size: 14px
            &:hover
              background-color: #039
      .loading
        border-top: 1px solid #ccc
        font-size: 14px
        margin: 12px
        color: #888
        padding-top: 20px
        width: auto
        height: auto
