.resetpassword
  float: left
  .item-error
    margin-left: 75px
    margin-bottom: 10px
    color: #fe2617
    height: 20px
    line-height: 20px
  .item
    clear: both
    margin: 0 0 15px
    label
      display: inline-block
      float: left
      margin-right: 15px
      text-align: right
      width: 60px
      font-size: 14px
      line-height: 30px
      vertical-align: baseline
    .basic-input
      width: 200px
      padding: 5px
      height: 18px
      font-size: 14px
      vertical-align: middle
      border-radius: 3px
      border: 1px solid #c9c9c9
    .reset-passowrd-btn
      cursor: pointer
      color: #fff
      background-color: #3fa156
      border: 1px solid #528641
      font-size: 14px
      font-weight: bold
      padding: 6px 26px
      border-radius: 3px
    .validate-option,.validate-error
      padding-left: 10px
      background: url('../../../img/tips_arrow.gif') no-repeat
    .validate-option
      background-position: left 3px
      color: #808080
    .validate-error
      background-position: left -52px
      color: #fe2617
.aside
  p
    margin: 0
