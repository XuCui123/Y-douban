.index-nav
  width: 950px
  margin: 0 auto 25px
  padding-top: 30px
  .index-nav-links
    float: right
    margin-top: 6px
    .item
      margin-left: 17px
      .link-item
        display: inline-block
        width: 40px
        height: 20px
        overflow: hidden
        margin: 0
        line-height: 20em
        outline: none
        vertical-align: middle
        color: transparent
        background-image: url('../../../dist/img/index/index_nav_logo.png')
    .link-book
      background-position: 0 0
    .link-movie
      background-position: -60px 0
    .link-music
      background-position: -120px 0
    .link-group
      background-position: -180px 0
    .link-events
      background-position: -299px 0
    .link-fm
      background-position: -241px 0
    .link-something
      background-position: -359px 0
    .link-market
      width: 42px
      background-position: -421px 0
  .index-nav-logo
    display: inline-block
    width: 160px
    height: 34px
    vertical-align: middle
    margin-right: 20px
    padding: 0
    font-weight: normal
    background: url('../../../dist/img/index/index_douban_logo.png') no-repeat 0 0
    overflow: hidden
    .logo
      display: block
      height: 34px
      line-height: 34px
      font-size: 0
  .index-nav-search
    position: relative
    display: inline-block
    width: 270px
    height: 30px
    vertical-align: middle
    border: 1px solid #c3c3c3
    .search-inp
      height: 30px
      line-height: 30px
      overflow: hidden
      input
        width: 240px
        border: none
        font-size: 13px
        height: 20px
        padding: 5px
    .search-btn
      position: absolute
      right: 0
      top: 0
      width: 30px
      height: 30px
      overflow: hidden
      cursor: pointer
      background: url('../../../dist/img/index/index_srh.png') 50% 50% no-repeat
      button
        width: 30px
        height: 30px
        border: none
        background: transparent
        overflow: hidden
        font-size: 0
        color: transparent
        cursor: pointer
