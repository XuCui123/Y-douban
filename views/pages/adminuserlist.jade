extends ../layout

block content
  .wrapper
    .table-wrapper(style="margin-top: 50px;")
      table.table.table-hover.table-bordered
        thead
          tr
            th 邮箱
            th 名号
            th 地址
            th 手机号
            th 创建时间
            th 查看
            th 删除
        tbody
          each user in users
            tr(class="user-id-" + user._id)
              td #{user.email}
              td #{user.nickname}
              td #{user.address}
              td #{user.phone}
              td #{moment(user.meta.createAt).format('YYYY-MM-DD, HH:mm:ss')}
              td
                a(href="/user/" + user._id, target="_blank") 查看
              td
                button.btn.btn-danger.admin_userlist_del(type="button", data-id = user._id) 删除
    ul.pagination
      li
        - if (currentPage == 1) {
          span &laquo;
        - }else{
          a(href='/admin/userlist?p=' + (currentPage-2)) &laquo;
        - }           
      - for (var i = 0; i < totalPage; i++) {
        - if (currentPage == (i + 1)) {
          li.active
            span #{currentPage}
        - }else {
          li
            a(href='/admin/userlist?p=' + i) #{i + 1}
        - }
      - }
      li
        - if (currentPage == totalPage) {
          span &raquo;
        - }else{
          a(href='/admin/userlist?p=' + (currentPage)) &raquo;
        - } 
