extends ../layout

block content
  .wrapper(style="margin-top: 50px")
    h3
      span.glyphicon.glyphicon-tree-deciduous
      | 豆瓣电影录入
    .notification-info(style="width: 100%; height: 50px;")
      if error
        p #{error}
    .form-wrapper
      form.form-horizontal(method="POST")
        .form-group
          label.col-md-2.control-label(for="movie_douban") 豆瓣同步
          .col-md-6
            input#movie_douban.form-control(type="text")
          .col-md-2
            button#movie_douban_btn.btn.btn-primary(type="button") 同步
        .form-group
          label.col-md-2.control-label(for="movie_name") 电影名称
          .col-md-6
            input#movie_name.form-control(type="text" name="movie_name")
        .form-group
          label.col-md-2.control-label(for="movie_director") 导演
          .col-md-6
            input#movie_director.form-control(type="text" name="movie_director")
        .form-group
          label.col-md-2.control-label(for="movie_screenwriter") 编剧
          .col-md-6
            input#movie_screenwriter.form-control(type="text" name="movie_screenwriter")
        .form-group
          label.col-md-2.control-label(for="movie_actor") 主演
          .col-md-6
            input#movie_actor.form-control(type="text" name="movie_actor")
        .form-group
          label.col-md-2.control-label(for="movie_categories") 类型
          .col-md-6
            input#movie_categories.form-control(type="text" name="movie_categories")
        .form-group
          label.col-md-2.control-label(for="movie_country") 制片国/地区
          .col-md-6
            input#movie_country.form-control(type="text" name="movie_country")
        .form-group
          label.col-md-2.control-label(for="movie_language") 语言
          .col-md-6
            input#movie_language.form-control(type="text" name="movie_language")
        .form-group
          label.col-md-2.control-label(for="movie_year") 上映日期
          .col-md-6
            input#movie_year.form-control(type="text" name="movie_year")
        .form-group
          label.col-md-2.control-label(for="movie_duration") 片长
          .col-md-6
            input#movie_duration.form-control(type="text" name="movie_duration")
        .form-group
          label.col-md-2.control-label(for="movie_alias") 又名
          .col-md-6
            input#movie_alias.form-control(type="text" name="movie_alias")
        .form-group
          label.col-md-2.control-label(for="movie_post") 海报
          .col-md-6
            input#movie_post.form-control(type="text" name="movie_post")
        .form-group
          .col-md-offset-2.col-md-10
            button.btn.btn-default(type="submit") 录入
